{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler", // Match Next.js
    "sourceMap": true,
    "lib": ["ES2020", "ESNext", "DOM"],
    "rootDir": "src", // Ensure source files are correctly mapped
    "emitDeclarationOnly": false, // Ensure JS files are emitted
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "tsc-alias": {
    "verbose": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}